    <style name="ToolbarText.Expanded" parent="ToolbarText.Collapsed">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">34sp</item>
    </style>-->

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconTint">@color/red_mat</item>
        <item name="boxStrokeErrorColor">@color/red_mat</item>
        <item name="errorTextColor">@color/red_mat</item>
        <item name="helperTextTextColor">#777</item>
        <item name="android:layout_width">match_parent</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sixteen</item>
        <item name="android:textColorHint">@color/selector_hint_color</item>
        <item name="boxCornerRadiusTopStart">@dimen/corners_input</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corners_input</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corners_input</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corners_input</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/selector_stroke_color</item>
        <item name="hintTextColor">@color/selector_hint_color</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundColor">#1A000000</item>
    </style>

    <style name="TextEdit">

        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:padding">12dp</item>
    </style>

    <dimen name="twenty">20dp</dimen>
    <dimen name="sixteen">16dp</dimen>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <dimen name="corners_input">4dp</dimen>
</resources>