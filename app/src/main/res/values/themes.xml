<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StreamX" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:colorAccent">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/browser_actions_bg_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="background">@color/white</item>
        <item name="android:titleTextStyle">@style/BlackActionBarTitleTextStyle</item>
        <item name="titleTextStyle">@style/BlackActionBarTitleTextStyle</item>
    </style>

    <!-- Alert Dialog -->
    <style name="MyThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
    </style>


    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00CA00</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="BlackActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>
    <!--<style name="ToolbarText.Collapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">

